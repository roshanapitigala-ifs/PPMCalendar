<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cellDay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/box_border"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_textview_bg"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="01" />

    <TextView
        android:id="@+id/task1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/vertical_rect_box"
        android:drawablePadding="5dp"
        android:ellipsize="end"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date"
        tools:text="Task 1: task title goes here" />

    <TextView
        android:id="@+id/task2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:drawableLeft="@drawable/vertical_rect_box"
        android:drawablePadding="5dp"
        android:ellipsize="end"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/task1"
        app:layout_constraintTop_toBottomOf="@+id/task1"
        tools:text="Task 2: task title goes here" />

    <TextView
        android:id="@+id/task3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:drawableLeft="@drawable/vertical_rect_box"
        android:drawablePadding="5dp"
        android:ellipsize="end"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/task1"
        app:layout_constraintTop_toBottomOf="@+id/task2"
        tools:text="Task 3: task title goes here" />

    <TextView
        android:id="@+id/moreTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/task1"
        app:layout_constraintTop_toBottomOf="@+id/task3"
        tools:text="+ X more" />

</androidx.constraintlayout.widget.ConstraintLayout>